    = link_to "New Question", new_question_group_question_path(@question_group),
      :remote => true, :class => "btn btn-primary btn-small"
%hr

%table.table.table-striped.table-bordered
  %colgroup
    %col
    %col{ :width => 250 }
  %thead
    %tr
      %th Question
      %th
  %tbody
    = render :partial => "question", :collection => @questions
