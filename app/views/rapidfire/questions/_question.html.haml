%tr{ :id => "question_#{question.id}" }
  %td= question.question_text
  %td
    %ul.horizontal-list
      %li
        = link_to "Edit", [:edit, question.question_group, question], :remote => true,
          :class => "btn btn-small btn-primary"
      %li
        = link_to "Delete", [question.question_group, question], :method => :delete, :remote => true,
          :class => "btn btn-small btn-danger"
