%h2
  Question Groups
  .pull-right
    = link_to "New Group", new_question_group_path, :remote => true, :class => "btn btn-primary btn-small"
%hr

%table.table.table-striped.table-bordered
  %colgroup
    %col
    %col{ :width => 250 }
  %thead
    %tr
      %th Question Group
      %th
  %tbody
    - @question_groups.each do |question_group|
      %tr{ :id => "question_group_#{question_group.id}" }
        = render :partial => "question_group", :locals => { :question_group => question_group }
#js-modal
